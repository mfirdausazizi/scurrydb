# Scurry Environment Configuration
# Copy this file to .env.local and fill in your values

# Encryption key for storing connection passwords (generate a random 32-char string)
ENCRYPTION_KEY=your-32-character-encryption-key

# Optional: Database for storing app data (defaults to SQLite)
# DATABASE_URL=

# Optional: Enable debug mode
# DEBUG=false

# SMTP Configuration for sending emails (password reset, invitations, etc.)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-smtp-username
SMTP_PASSWORD=your-smtp-password
SMTP_FROM_EMAIL=noreply@example.com
SMTP_FROM_NAME=ScurryDB

# App URL (used for email links)
APP_URL=http://localhost:3000
